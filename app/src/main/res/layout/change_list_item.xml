<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/ch_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/cell_color">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/ch_btn_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ch_img"
            android:contentDescription="@string/lamp"
            android:background="@drawable/sq_btn_color"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ch_text_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/ch_dev_out_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ch_ndev"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ch_nOut"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:id="@+id/ch_Name"
            />

    </LinearLayout>

</LinearLayout>